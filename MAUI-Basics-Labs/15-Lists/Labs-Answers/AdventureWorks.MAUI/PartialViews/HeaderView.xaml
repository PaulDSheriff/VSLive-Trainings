<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdventureWorks.MAUI.PartialViews.HeaderView">
  <Grid RowDefinitions="Auto,Auto,Auto">
    <Label Text="{Binding Path=ViewTitle}"
           FontSize="24"
           Grid.Row="0" />
    <Label Text="{Binding Path=ViewSubTitle}"
           FontSize="16"
           Grid.Row="1" />
    <BoxView Grid.Row="2"
             Margin="0,0,0,20"
             HeightRequest="1"
             Color="Black" />
  </Grid>
</ContentView>
