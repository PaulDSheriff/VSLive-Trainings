<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="XamlBasicsMAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:XamlBasicsMAUI.Views"
       xmlns:local="clr-namespace:XamlBasicsMAUI"      
       Title="My .NET MAUI Application"
       Shell.FlyoutBehavior="Disabled">

  <TabBar>
    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />
    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate views:LoginView}"
                  Route="LoginView" />
    <ShellContent Title="Employee"
                  ContentTemplate="{DataTemplate views:EmployeeInfoView}"
                  Route="EmployeeInfoView" />
  </TabBar>

</Shell>
