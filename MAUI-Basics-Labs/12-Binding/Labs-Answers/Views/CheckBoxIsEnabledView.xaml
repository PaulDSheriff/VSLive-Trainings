<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlBindingMAUI.Views.CheckBoxIsEnabledView"
             Title="CheckBox IsEnabled Sample">
  <Border Stroke="Black"
          StrokeThickness="2"
          HorizontalOptions="Start"
          VerticalOptions="Start"
          MinimumHeightRequest="200"
          MinimumWidthRequest="300">
    <VerticalStackLayout Margin="10">
      <HorizontalStackLayout>
        <Label Text="Has Benefits?" />
        <CheckBox x:Name="hasBenefits" />
      </HorizontalStackLayout>
      <HorizontalStackLayout>
        <Label Text="401k" />
        <CheckBox IsEnabled="{Binding Path=IsChecked}"
                  BindingContext="{x:Reference hasBenefits}" />
      </HorizontalStackLayout>
      <HorizontalStackLayout>
        <Label Text="Health Care" />
        <CheckBox IsEnabled="{Binding Path=IsChecked}"
                  BindingContext="{x:Reference hasBenefits}" />
      </HorizontalStackLayout>
    </VerticalStackLayout>
  </Border>

</ContentPage>