<Window x:Class="SimpleDataBindingSamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDataBindingSamples"
        mc:Ignorable="d"
        Title="Simple Binding Samples"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600">
  <Grid>
    <StackPanel HorizontalAlignment="Center">
      <Button Click="TextBoxToLabel_Click">Text Box to Label</Button>
      <Button Click="ComboBoxToLabel_Click">Combo Box to Label</Button>
      <Button Click="FontFamily_Click">Bind FontFamily Property</Button>
      <Button Click="IsEnabled_Click">Bind IsEnabled Property</Button>
      <Button Click="Visibility_Click">Boolean to Visiblity</Button>
      <Button Click="NotVisibility_Click">Not Boolean to Visiblity</Button>
      <Button Click="RadioButton_Click">Radio Button Binding</Button>
    </StackPanel>
  </Grid>
</Window>
