<Window x:Class="SimpleDataBindingSamples.FontFamilyBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDataBindingSamples"
        mc:Ignorable="d"
        Title="Bind to FontFamily Property"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600">
  <Border BorderBrush="Black"
          BorderThickness="2"
          Margin="10">    
    <StackPanel Margin="10">
      <ComboBox Name="Fonts"
                ItemsSource="{x:Static Fonts.SystemFontFamilies}" />

      <Label Content="This is some Text."
             FontSize="16"
             FontFamily="{Binding ElementName=Fonts, Path=SelectedItem}" />
    </StackPanel>
  </Border>
</Window>
