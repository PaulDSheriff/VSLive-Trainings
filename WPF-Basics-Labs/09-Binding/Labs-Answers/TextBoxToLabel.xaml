<Window x:Class="SimpleDataBindingSamples.TextBoxToLabel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDataBindingSamples"
        mc:Ignorable="d"        
        Title="Bind Text Box to Label"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600">
  <Border BorderBrush="Black"
          BorderThickness="2"
          Margin="10">
    <StackPanel Margin="10">
      <TextBox x:Name="DataEntry" />
      <Label Content="{Binding ElementName=DataEntry, Path=Text}" />
    </StackPanel>
  </Border>
</Window>
