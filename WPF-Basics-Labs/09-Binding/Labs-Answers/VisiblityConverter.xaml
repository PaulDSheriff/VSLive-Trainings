<Window x:Class="SimpleDataBindingSamples.VisiblityConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDataBindingSamples"
        mc:Ignorable="d"
        Title="Boolean to Visibility"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600">
  <Window.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
  </Window.Resources>
  <Border BorderBrush="Black"
          BorderThickness="2"
          Margin="10">
    <StackPanel Margin="10">
      <CheckBox Content="Has Benefits?"
                Name="HasBenefits" />
      <CheckBox Content="401k"
                Visibility="{Binding Path=IsChecked, ElementName=HasBenefits, Converter={StaticResource BoolToVisibility}}" />
      <CheckBox Content="Health Care"
                Visibility="{Binding Path=IsChecked, ElementName=HasBenefits, Converter={StaticResource BoolToVisibility}}" />
    </StackPanel>
  </Border>
</Window>
