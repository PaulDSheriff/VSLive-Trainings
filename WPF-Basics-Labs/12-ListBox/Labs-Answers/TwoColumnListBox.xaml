<Window x:Class="ListBoxSamples.TwoColumnListBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBoxSamples"
        xmlns:data="clr-namespace:AdventureWorks.DataLayer"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Two Column List Box"
        Height="600"
        Width="800">
  <Window.Resources>
    <ObjectDataProvider x:Key="productList"
                        ObjectType="{x:Type data:ProductRepository}"
                        MethodName="Get" />
  </Window.Resources>
  <Grid>
    <ListBox Grid.Row="1"
             ItemsSource="{Binding Source={StaticResource productList}}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid MinWidth="300">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="3*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Path=Name}" />
            <TextBlock Grid.Column="1"
                       Text="{Binding Path=ListPrice, StringFormat={}{0:c}}" />
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</Window>
